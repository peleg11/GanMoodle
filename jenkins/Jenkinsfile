pipeline {
    agent { docker { image 'python:3.8-buster' } }
    stages {
        stage('Build') {
            steps {
                sh 'python --version'
            }

        }
        stage('setup'){
          steps{
            withPythonEnv('python') {
              // Uses the default system installation of Python
              // Equivalent to withPythonEnv('/usr/bin/python')
            dir('jenkins'){
            sh 'python -m pip install -r requirements.txt'
            }
            echo 'hello'
          }
          }
        }
    }
}
